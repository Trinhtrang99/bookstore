<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layoutClickerInHis"
    android:layout_width="@dimen/_100sdp"
    android:padding="@dimen/_5sdp"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardBookInHis"
        android:elevation="@dimen/_1sdp"
        app:cardPreventCornerOverlap="true"
        app:cardCornerRadius="@dimen/_10sdp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_130sdp">
        <ImageView
            android:elevation="@dimen/_1sdp"
            android:scaleType="fitXY"
            android:id="@+id/imgBookInHis"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </ImageView>
    </androidx.cardview.widget.CardView>
    <TextView
        android:maxLines="1"
        android:layout_below="@+id/cardBookInHis"
        android:textStyle="bold"
        android:text="SAO"
        android:layout_marginTop="@dimen/_2sdp"
        android:id="@+id/tvTitleInHis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </TextView>
    <TextView
        android:maxLines="1"
        android:text="100000 vnÄ‘"
        android:layout_marginTop="@dimen/_2sdp"
        android:id="@+id/tvPriceBookInHis"
        android:layout_below="@+id/tvTitleInHis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </TextView>
    <TextView
        android:id="@+id/tvDateBuy"
        android:layout_below="@id/tvPriceBookInHis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </TextView>
</RelativeLayout>