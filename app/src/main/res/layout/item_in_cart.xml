<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layoutClickerInCart"
    android:layout_width="@dimen/_100sdp"
    android:padding="@dimen/_5sdp"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardBookInCart"
        android:elevation="@dimen/_1sdp"
        app:cardPreventCornerOverlap="true"
        app:cardCornerRadius="@dimen/_10sdp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_130sdp">

        <ImageView
            android:elevation="@dimen/_100sdp"
            android:layout_marginLeft="@dimen/_100sdp"
            android:layout_gravity="right"
            android:src="@drawable/delete"
            android:layout_marginTop="@dimen/_1sdp"
            android:layout_marginRight="@dimen/_1sdp"
            android:id="@+id/btnDeleteItemInCart"
            android:layout_width="@dimen/_15sdp"
            android:layout_height="@dimen/_15sdp"></ImageView>

        <ImageView
            android:elevation="@dimen/_1sdp"
            android:scaleType="fitXY"
            android:id="@+id/imgBookInCart"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></ImageView>
    </androidx.cardview.widget.CardView>

    <TextView
        android:maxLines="1"
        android:layout_below="@+id/cardBookInCart"
        android:textStyle="bold"
        android:text="SAO"
        android:layout_marginTop="@dimen/_2sdp"
        android:id="@+id/tvTitleInCart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></TextView>

    <TextView
        android:maxLines="1"
        android:text="100000 vnÄ‘"
        android:layout_marginTop="@dimen/_2sdp"
        android:id="@+id/tvPriceBookInCart"
        android:layout_below="@+id/tvTitleInCart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </TextView>
</RelativeLayout>